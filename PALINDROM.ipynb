   "source": [
    "Ace = str(input(\"~Input a word to mirror it and check for palindromes:\") )\n",
    "LoweredAce =  Ace.lower()\n",
    "Aceful = ''.join(char for char in LoweredAce if char.isalnum())\n",
    "rev = Aceful[::-1]\n",
    "print(rev)\n",
    "if rev == Aceful:\n",
    "    print (\"its a palindrome\")\n",
    "else:\n",
    "    print (\"not a palindrome\")"
   ]
